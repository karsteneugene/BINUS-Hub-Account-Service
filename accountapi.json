{
    "openapi":"3.0.3",
    "info": {
        "title":"Account Service",
        "version":"1.0.0",
        "description": "This spec lists all available endpoints related to the account service.",
        "contact": {
            "name": "Karsten Eugene Lie",
            "email": "karsten.lie@binus.ac.id"
        }
    },
    "servers": [
        {
            "url": "https://{subdomain}.yourawsdomain.yourtld/api/v1",
            "description": "AWS",
            "variables": {
            "subdomain": {
                "enum": ["dev","prod"],
                "default": "dev"
                }
            }
        },
        {
            "url": "https://{subdomain}.yourgcpdomain.anothertld/api/v1",
            "description": "GCP",
            "variables": {
            "subdomain": {
                "enum": ["dev","prod"],
                "default": "dev"
                }
            }
        }
    ],
    "tags": [
        {"name": "Query","description": "All endpoints related to get accounts"},
        {"name": "Create","description": "All endpoints related to creating accounts"},
        {"name": "Update","description": "All endpoints related to updating accounts"},
        {"name": "Delete","description": "All endpoints related to deleting accounts"}
    ],
    "paths": {
        "/accounts": {
            "get": {
                "security": [
                    {
                        "Authorization": []
                    }
                ],
                "tags": ["Query"],
                "summary": "Get some or all accounts",
                "responses": {
                    "200": {
                        "description": "Accounts to be returned",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "account_id": "1",
                                        "first_name": "Darren",
                                        "last_name": "Pangesa",
                                        "email": "darrenpangesa@binus.ac.id",
                                        "role": "Admin"
                                    },
                                    {
                                        "account_id": "2",
                                        "first_name": "John",
                                        "last_name": "Doe",
                                        "email": "johndoe@binus.ac.id",
                                        "role": "Student"
                                    },
                                    {
                                        "account_id": "3",
                                        "first_name": "Jane",
                                        "last_name": "Smith",
                                        "email": "janesmith@binus.ac.id",
                                        "role": "Lecturer"
                                    },
                                    {
                                        "account_id": "",
                                        "first_name": "",
                                        "last_name": "",
                                        "email": "",
                                        "role": "Guest"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "Authorization": []
                    }
                ],
                "tags": ["Create"],
                "summary": "Post a new account",
                "description": "Create a new account",
                "requestBody": {
                    "required": true,
                    "description": "Request body to create an account",
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/Accounts"
                            },
                            "examples": {
                                "single":{
                                    "value":[
                                        {
                                            "account_id": "3",
                                            "first_name": "John",
                                            "last_name": "Doe",
                                            "email": "johndoe@binus.ac.id",
                                            "role": "Student"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200":{
                        "description": "Account is created",
                        "content": {
                            "application/json":{
                                "example":{
                                    "message": "The account was successfully created."
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "Authorization": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Please enter the access token."
            }
        },
        "schemas": {
            "Accounts":{
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "account_id": {
                            "type":"string"
                        },
                        "first_name": {
                            "type":"string",
                            "minLength": 1
                        },
                        "last_name": {
                            "type":"string",
                            "minLength": 1
                        },
                        "email": {
                            "type":"string",
                            "minLength": 1
                        },
                        "role": {
                            "type":"string",
                            "minLength": 1
                        }
                    }
                }
            }
        }
    }
}
    